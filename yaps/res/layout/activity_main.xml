<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/transfer_albums_photos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/transfer_albums_photos" />

    <Button
        android:id="@+id/view_albums_photos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/view_albums_photos" />

    <Button
        android:id="@+id/transfer_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/transfer_status" />

    <Button
        android:id="@+id/test_pages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/test_pages" />

</LinearLayout>